        <ListBox x:Name="DirectoryTreeList" HorizontalAlignment="Left" Height="301" Margin="0,18,0,0" VerticalAlignment="Top" Width="224" Background="Black" Foreground="White" Opacity="0.5" PreviewMouseRightButtonDown="DirectoryTreeList_PreviewMouseRightButtonDown" SelectionChanged="DirectoryTreeList_SelectionChanged"/>
    </Grid>
</Window>
